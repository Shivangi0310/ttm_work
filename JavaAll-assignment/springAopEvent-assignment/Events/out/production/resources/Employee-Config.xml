<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   <bean class="demo.Employee">
       <property name="name" value="Aakash"/>
       <property name="id" value="101"/>
   </bean>
    <bean class="demo.Student">
       <property name="name" value="Shivangi"/>
       <property name="id" value="102"/>
   </bean>
   <bean class="events.EmployeeEventListener"/>
   <bean class="events.StudentStartEventListener"/>
   <bean class="events.StudentStopEventListener"/>
</beans>